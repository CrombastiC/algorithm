{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试当前 TypeScript 文件",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": ["${file}"],
      "cwd": "${workspaceFolder}",
      "restart": true,
      "env": {
        "TS_NODE_SKIP_IGNORE": "true"
      },
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "name": "调试螺旋矩阵",
      "type": "node", 
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/ts-node/dist/bin.js",
      "args": ["${workspaceFolder}/螺旋矩阵.ts"],
      "cwd": "${workspaceFolder}",
      "restart": true,
      "env": {
        "TS_NODE_SKIP_IGNORE": "true"
      },
      "runtimeArgs": ["--nolazy"],
      "sourceMaps": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    }
  ]
}
